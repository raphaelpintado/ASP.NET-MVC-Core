@model ErrorViewModel
@{
    ViewData["Title"] = Model?.Titulo ?? "Error";
}

@{
    if (Model == null)
    {
        <div>
            <h2>Ooops! Ocorreu um erro.</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Titulo)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Mensagem)</h2>
    }
}
